@model FilmVM

<div class="container">
    <div class="d-flex">
        <div class="col-lg-8">
            <div style="height:200px;" class="col-lg-12 card">
                @Model.Film.UrlName
                @foreach (var item in Model.Subtitles)
                {
                    @item.SubtitleKey
                }
                @foreach (var item in Model.Audios)
                {
                    @item.AudioKey
                }
            </div>
            <div>
                <h3>Name : @Model.Film.Name</h3>
                <h5>Description : @Model.Film.Description</h5>
            </div>
            <div class="d-flex">
                @foreach (var item in Model.FilmToComments)
                {
                <div class="mx-4"> @item.Comment.User.Name : @item.Comment.Text</div>
                }
            </div>
        </div>
        <div class="col-lg-4">
            <ul>
                @foreach (var item in Model.Category)
                {
                <li>
                    @item.Name
                </li>
                }
            </ul>
        </div>
    </div>
</div>